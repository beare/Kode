# Multi-stage build for Kode Web Server

FROM oven/bun:1 AS builder

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./
COPY web-client/package.json ./web-client/

# Install dependencies
RUN bun install --frozen-lockfile || bun install
RUN cd web-client && (bun install --frozen-lockfile || bun install)

# Copy source code
COPY . .

# Build server
RUN bun run build

# Build web client
RUN cd web-client && bun run build

# Production stage
FROM oven/bun:1-slim

WORKDIR /app

# Copy built artifacts
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/web-client/dist ./web-client/dist
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules

# Create workspace directory
RUN mkdir -p /workspace && chmod 777 /workspace

# Create config directory
RUN mkdir -p /root/.kode

ENV NODE_ENV=production
ENV WORKSPACE_DIR=/workspace
ENV PORT=3000

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD bun fetch http://localhost:3000/api/health || exit 1

CMD ["bun", "run", "dist/entrypoints/server.js"]
